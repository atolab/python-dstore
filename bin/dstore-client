#!/usr/bin/env python3

import asyncio
import websockets
import sys


default_host = 'localhost'
default_port = 9669
default_auth = 'a1b2c3d4'


@asyncio.coroutine
def repl(host, port, auth):
    websocket = yield from websockets.connect('ws://{}:{}/{}'.format(host, port, auth))
    while True:
        cmd = input(">>>  ")
        if cmd is '0':
            print("Closing Session. Ciao!")
            websocket.close()
            break
        if cmd != '':
            yield from websocket.send(cmd)
            response = yield from websocket.recv()
            print("{}".format(response))
            xs = cmd.split(' ')
            if len(xs) > 0 and xs[0] == 'observe':
                while True:
                    response = yield from websocket.recv()
                    print("{}".format(response))


if __name__ == '__main__':
    host = default_host
    port = default_port
    auth = default_auth

    if len(sys.argv) > 1:
        if sys.argv[1] == '--help' or sys.argv[1] == '-help' or sys.argv[1] == '-h':
            print("\nUSAGE:\n\t{} [store server host] [store server port] [auth]\n".format(sys.argv[0]))
            exit(0)
        host = sys.argv[1]
    if len(sys.argv) > 2:
        port = sys.argv[2]
    if len(sys.argv) > 3:
        auth = sys.argv[3]

    asyncio.get_event_loop().run_until_complete(repl(host, port, auth))
